<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teachernavigator.teachernavigator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.TeacherNavigatopApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.screens.main.activities.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.screens.auth.activities.AuthActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.screens.tape.activities.PostSearchActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.screens.tape.activities.PostDetailActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.screens.tape.activities.PostCommentsActivity"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>