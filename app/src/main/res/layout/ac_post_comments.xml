<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/ac_post_comments_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <android.support.v7.widget.Toolbar
            android:id="@+id/ac_post_comments_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/ac_post_comments_sv_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ac_post_comments_ll_do_comment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ac_post_comments_appBarLayout"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ac_post_comments_ll_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/externalPadding"
                android:layout_marginLeft="@dimen/externalPadding"
                android:layout_marginRight="@dimen/externalPadding"
                android:layout_marginStart="@dimen/externalPadding"
                android:layout_marginTop="@dimen/externalPadding">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/externalPadding">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ac_post_comments_iv_avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_avatar" />

                    <TextView
                        android:id="@+id/ac_post_comments_tv_author_name"
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/externalPadding"
                        android:layout_marginStart="@dimen/externalPadding"
                        android:layout_marginTop="@dimen/internalPadding"
                        android:layout_toEndOf="@+id/ac_post_comments_iv_avatar"
                        android:layout_toRightOf="@+id/ac_post_comments_iv_avatar" />

                    <TextView
                        android:id="@+id/ac_post_comments_tv_post_time"
                        style="@style/SmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ac_post_comments_tv_author_name"
                        android:layout_alignStart="@+id/ac_post_comments_tv_author_name"
                        android:layout_below="@+id/ac_post_comments_tv_author_name"
                        android:textColor="@color/lightTextColor" />

                    <ImageView
                        android:id="@+id/ac_post_comments_iv_subscribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/ac_post_comments_tv_author_name"
                        android:src="@drawable/ic_subscribe" />

                    <TextView
                        android:id="@+id/ac_post_comments_tv_text"
                        style="@style/Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/ac_post_comments_tv_post_time"
                        android:layout_alignStart="@+id/ac_post_comments_tv_post_time"
                        android:layout_below="@+id/ac_post_comments_tv_post_time"
                        android:layout_marginTop="@dimen/externalPadding" />

                    <TextView
                        android:id="@+id/ac_post_comments_tv_complain"
                        style="@style/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/miniControlsHeight"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/ac_post_comments_tv_text"
                        android:layout_marginTop="@dimen/externalPadding"
                        android:gravity="center_vertical"
                        android:text="@string/complain"
                        android:textColor="@color/greyTextColor" />

                    <com.greenfrvr.hashtagview.HashtagView
                        android:id="@+id/ac_post_comments_hv_hasttags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/ac_post_comments_tv_complain"
                        android:paddingTop="@dimen/externalPadding"
                        app:rowGravity="left"
                        app:tagBackground="@drawable/hash_tag_background"
                        app:tagPaddingLeft="12dp"
                        app:tagPaddingRight="12dp"
                        app:tagTextColor="@color/greyTextColor"
                        app:tagTextSize="@dimen/normalTextSize" />

                    <View
                        android:id="@+id/ac_post_comments_v_devider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/ac_post_comments_hv_hasttags"
                        android:layout_marginTop="@dimen/internalPadding"
                        android:background="@color/colorDevider" />

                    <TextView
                        android:id="@+id/ac_post_comments_tv_like"
                        style="@style/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/ac_post_comments_v_devider"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_like"
                        android:drawablePadding="@dimen/internalPadding"
                        android:drawableStart="@drawable/ic_like"
                        android:text="0" />

                    <TextView
                        android:id="@+id/ac_post_comments_tv_dislike"
                        style="@style/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/ac_post_comments_tv_like"
                        android:layout_alignBottom="@+id/ac_post_comments_tv_like"
                        android:layout_marginLeft="@dimen/externalPadding"
                        android:layout_marginRight="@dimen/internalPadding"
                        android:layout_toEndOf="@+id/ac_post_comments_tv_like"
                        android:layout_toRightOf="@+id/ac_post_comments_tv_like"
                        android:drawableLeft="@drawable/ic_dislike"
                        android:drawablePadding="@dimen/internalPadding"
                        android:drawableStart="@drawable/ic_dislike"
                        android:text="@string/default_likes_count" />

                    <TextView
                        android:id="@+id/ac_post_comments_tv_comments"
                        style="@style/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ac_post_comments_v_devider"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_comments"
                        android:drawablePadding="@dimen/internalPadding"
                        android:drawableStart="@drawable/ic_comments"
                        android:text="0" />

                    <ImageView
                        android:id="@+id/ac_post_comments_iv_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/ac_post_comments_v_devider"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_save" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ac_post_comments_ll_do_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ac_post_comments_et_comment_text"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/internalPadding"
            android:layout_marginLeft="@dimen/internalPadding"
            android:layout_marginStart="@dimen/internalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:layout_weight="0.8"
            android:hint="@string/comment_text"
            android:lines="1" />

        <ImageView
            android:id="@+id/ac_post_comments_iv_do_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:paddingBottom="@dimen/internalPadding"
            android:paddingLeft="@dimen/internalPadding"
            android:paddingRight="@dimen/internalPadding"
            android:paddingTop="@dimen/internalPadding"
            android:src="@drawable/ic_send" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/ac_post_comments_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
</RelativeLayout>

