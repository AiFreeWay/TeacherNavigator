<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/ac_post_comments_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <android.support.v7.widget.Toolbar
            android:id="@+id/ac_post_comments_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/ac_post_comments_sv_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ac_post_comments_ll_do_comment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ac_post_comments_appBarLayout"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ac_post_comments_ll_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/externalPadding"
                android:layout_marginLeft="@dimen/externalPadding"
                android:layout_marginRight="@dimen/externalPadding"
                android:layout_marginStart="@dimen/externalPadding"
                android:layout_marginTop="@dimen/externalPadding">

                <com.teachernavigator.teachernavigator.presentation.screens.common.post.PostDetailView
                    android:id="@+id/ac_post_comments_postview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ac_post_comments_ll_do_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ac_post_comments_et_comment_text"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/internalPadding"
            android:layout_marginLeft="@dimen/internalPadding"
            android:layout_marginStart="@dimen/internalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:layout_weight="0.8"
            android:hint="@string/comment_text"
            android:lines="1" />

        <ImageView
            android:id="@+id/ac_post_comments_iv_do_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:paddingBottom="@dimen/internalPadding"
            android:paddingLeft="@dimen/internalPadding"
            android:paddingRight="@dimen/internalPadding"
            android:paddingTop="@dimen/internalPadding"
            android:src="@drawable/ic_send" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/ac_post_comments_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
</RelativeLayout>

