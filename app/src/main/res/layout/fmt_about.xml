<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fmtAboutTvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacingXLarge"
            android:textSize="@dimen/normalTextSize"
            tools:text="@string/about" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacingXLarge"
            android:text="@string/we_in_social"
            android:textSize="@dimen/largeTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fmtAboutSocialVk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/spacingMedium"
                android:src="@drawable/ic_social_vk"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fmtAboutSocialTw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/spacingMedium"
                android:src="@drawable/ic_social_tw"
                android:visibility="gone"

                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fmtAboutSocialFb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/spacingMedium"
                android:src="@drawable/ic_social_fb"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fmtAboutInstagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/spacingMedium"
                android:src="@drawable/ic_instagram"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fmtAboutYoutube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/spacingMedium"
                android:src="@drawable/ic_youtube"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>