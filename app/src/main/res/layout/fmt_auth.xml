<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/titleTextSize"
            android:paddingTop="@dimen/externalPadding"
            android:text="@string/auth"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/auth_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/internalPadding"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fmt_auth_iv_vk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/internalPadding"
                android:layout_marginEnd="@dimen/externalPadding"
                android:layout_marginStart="@dimen/externalPadding"
                android:layout_marginTop="@dimen/internalPadding"
                android:src="@drawable/ic_social_vk" />

            <ImageView
                android:id="@+id/fmt_auth_iv_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/internalPadding"
                android:layout_marginEnd="@dimen/externalPadding"
                android:layout_marginStart="@dimen/externalPadding"
                android:layout_marginTop="@dimen/internalPadding"
                android:src="@drawable/ic_social_fb" />

            <ImageView
                android:id="@+id/fmt_auth_iv_tw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/internalPadding"
                android:layout_marginEnd="@dimen/externalPadding"
                android:layout_marginStart="@dimen/externalPadding"
                android:layout_marginTop="@dimen/internalPadding"
                android:src="@drawable/ic_social_tw" />

            <ImageView
                android:id="@+id/fmt_auth_iv_gp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/internalPadding"
                android:layout_marginEnd="@dimen/externalPadding"
                android:layout_marginStart="@dimen/externalPadding"
                android:layout_marginTop="@dimen/internalPadding"
                android:src="@drawable/ic_social_gp" />
        </LinearLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_auth_et_login"
            style="@style/EditText"
            android:layout_width="@dimen/buttonAndTextWidth"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/internalPadding"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/externalPadding"
            android:background="@drawable/oval_edit_text_backgroud"
            android:hint="@string/login_hint"
            android:lines="1" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_auth_et_password"
            style="@style/EditText"
            android:layout_width="@dimen/buttonAndTextWidth"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:background="@drawable/oval_edit_text_backgroud"
            android:hint="@string/password"
            android:lines="1" />

        <TextView
            android:id="@+id/fmt_auth_tv_restore_password"
            style="@style/Text"
            android:layout_width="@dimen/buttonAndTextWidth"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/internalPadding"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:gravity="center"
            android:text="@string/forgot_password" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fmt_auth_btn_sing_in"
            style="@style/Button"
            android:layout_width="@dimen/buttonAndTextWidth"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/externalPadding"
            android:text="@string/enter"
            android:textAllCaps="false"
            app:backgroundTint="@color/orange" />

        <TextView
            android:id="@+id/fmt_auth_tv_sing_up"
            style="@style/Text"
            android:layout_width="180dp"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="@string/create_account"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>