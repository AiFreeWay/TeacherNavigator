<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:paddingTop="@dimen/externalPadding"
            android:text="@string/auth"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceLarge" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/auth_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/internalPadding"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fmtAuthIvVk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/internalPadding"
                android:layout_marginEnd="@dimen/externalPadding"
                android:layout_marginStart="@dimen/externalPadding"
                android:layout_marginTop="@dimen/internalPadding"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_social_vk" />

            <ImageView
                android:id="@+id/fmtAuthIvFb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/internalPadding"
                android:layout_marginEnd="@dimen/externalPadding"
                android:layout_marginStart="@dimen/externalPadding"
                android:layout_marginTop="@dimen/internalPadding"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_social_fb" />

            <ImageView
                android:id="@+id/fmtAuthIvTw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/internalPadding"
                android:layout_marginEnd="@dimen/externalPadding"
                android:layout_marginStart="@dimen/externalPadding"
                android:layout_marginTop="@dimen/internalPadding"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_social_tw" />

            <ImageView
                android:id="@+id/fmtAuthIvGp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/internalPadding"
                android:layout_marginEnd="@dimen/externalPadding"
                android:layout_marginStart="@dimen/externalPadding"
                android:layout_marginTop="@dimen/internalPadding"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_social_gp" />
        </LinearLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmtAuthEtLogin"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/internalPadding"
            android:layout_marginEnd="@dimen/spacingXXLarge"
            android:layout_marginStart="@dimen/spacingXXLarge"
            android:layout_marginTop="@dimen/externalPadding"
            android:hint="@string/login_hint"
            android:lines="1" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmtAuthEtPassword"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/spacingXXLarge"
            android:layout_marginStart="@dimen/spacingXXLarge"
            android:layout_marginTop="@dimen/internalPadding"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:lines="1" />

        <TextView
            android:id="@+id/fmtAuthTvRestorePassword"
            android:layout_width="@dimen/buttonAndTextWidth"
            android:layout_height="@dimen/normalControlsHeight"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/internalPadding"
            android:textAppearance="?android:textAppearance"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/forgot_password" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fmtAuthBtnSingIn"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/spacingXXLarge"
            android:layout_marginStart="@dimen/spacingXXLarge"
            android:layout_marginTop="@dimen/externalPadding"
            android:text="@string/enter"
            android:textAllCaps="false"
            app:backgroundTint="@color/orange" />

        <TextView
            android:id="@+id/fmtAuthTvSingUp"
            android:layout_width="180dp"
            android:layout_height="@dimen/normalControlsHeight"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/externalPadding"
            android:textAppearance="?android:textAppearance"
            android:layout_marginTop="@dimen/internalPadding"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/create_account"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>