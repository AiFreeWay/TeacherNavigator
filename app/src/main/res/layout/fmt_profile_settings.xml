<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/fmt_profile_settings_et_email"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalControlsHeight"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:hint="@string/email"
        android:inputType="textWebEmailAddress"
        android:lines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/externalPadding"
        android:layout_marginStart="@dimen/externalPadding"
        android:layout_marginTop="@dimen/externalPadding"
        android:text="@string/or" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/fmt_profile_settings_et_phone"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalControlsHeight"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="@dimen/externalPadding"
        android:hint="@string/phone"
        android:inputType="phone"
        android:lines="1" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/fmt_profile_settings_btn_save"
        style="@style/Button"
        android:layout_width="@dimen/buttonAndTextWidth"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/externalPadding"
        android:layout_marginTop="20dp"
        android:text="@string/save"
        android:textAllCaps="false"
        app:backgroundTint="@color/orange" />
</LinearLayout>