<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_registration_et_full_name"
            style="@style/EditText"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/externalPadding"
            android:hint="@string/full_name" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_registration_et_birthday"
            style="@style/EditText"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:hint="@string/birthday" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_registration_et_work_place"
            style="@style/EditText"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:hint="@string/work_place" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_registration_et_position"
            style="@style/EditText"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:hint="@string/position" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_registration_et_experience"
            style="@style/EditText"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:hint="@string/experience" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_registration_et_trade_unionist"
            style="@style/EditText"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:hint="@string/trade_unionist" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_registration_et_trade_union_ticket_number"
            style="@style/EditText"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:hint="@string/trade_union_ticket_number" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_registration_et_email"
            style="@style/EditText"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_marginBottom="@dimen/internalPadding"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:hint="@string/email" />

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:text="@string/or"
            android:textAllCaps="true" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_registration_et_phone"
            style="@style/EditText"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:hint="@string/phone" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fmt_registration_et_password"
            style="@style/EditText"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:hint="@string/password" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/fmt_registration_chb_agreement"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/internalPadding"
            android:layout_marginEnd="@dimen/externalPadding"
            android:layout_marginStart="@dimen/externalPadding"
            android:layout_marginTop="@dimen/internalPadding"
            android:checked="true"
            android:text="@string/agreement" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fmt_registration_btn_sing_up"
            style="@style/Button"
            android:layout_width="@dimen/buttonAndTextWidth"
            android:layout_height="@dimen/normalButtonHeight"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/externalPadding"
            android:layout_marginBottom="@dimen/externalPadding"
            android:text="@string/create_account"
            android:textAllCaps="false"
            app:backgroundTint="@color/orange" />
    </LinearLayout>
</ScrollView>