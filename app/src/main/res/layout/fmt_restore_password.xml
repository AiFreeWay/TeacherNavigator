<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fmt_restore_password_tv_title"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/externalPadding"
        android:layout_marginStart="@dimen/externalPadding"
        android:layout_marginTop="@dimen/externalPadding"
        android:gravity="center"
        android:text="@string/restore_password_title" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/fmt_restore_password_et_password"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/externalPadding"
        android:layout_marginStart="@dimen/externalPadding"
        android:layout_marginTop="@dimen/internalPadding"
        android:hint="@string/login_hint" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/fmt_auth_btn_restore"
        style="@style/Button"
        android:layout_width="180dp"
        android:layout_height="@dimen/normalButtonHeight"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/externalPadding"
        android:layout_marginTop="@dimen/externalPadding"
        android:text="@string/restore_password"
        android:textAllCaps="false"
        app:backgroundTint="@color/colorAccent" />
</LinearLayout>