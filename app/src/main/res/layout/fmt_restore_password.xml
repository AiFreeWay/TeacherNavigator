<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="63dp"
        android:src="@drawable/password" />

    <TextView
        android:id="@+id/fmt_restore_password_tv_title"
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/externalPadding"
        android:layout_marginStart="@dimen/externalPadding"
        android:layout_marginTop="63dp"
        android:gravity="center"
        android:text="@string/restore_password" />

    <TextView
        android:id="@+id/fmt_restore_password_tv_title_text"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/externalPadding"
        android:layout_marginStart="@dimen/externalPadding"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:text="@string/restore_password_text" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/fmt_restore_password_et_login"
        style="@style/EditText"
        android:layout_width="@dimen/buttonAndTextWidth"
        android:layout_height="@dimen/normalControlsHeight"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/externalPadding"
        android:layout_marginStart="@dimen/externalPadding"
        android:layout_marginTop="39dp"
        android:hint="@string/login_hint"
        android:lines="1" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/fmt_restore_password_btn_restore"
        style="@style/Button"
        android:layout_width="@dimen/buttonAndTextWidth"
        android:layout_height="@dimen/normalControlsHeight"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/externalPadding"
        android:layout_marginTop="39dp"
        android:text="@string/do_restore_password"
        android:textAllCaps="false"
        app:backgroundTint="@color/orange" />
</LinearLayout>