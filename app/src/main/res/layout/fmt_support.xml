<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacingLarge">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/spacingLarge"
            android:text="@string/label_choose_specialist"
            android:textAppearance="?android:textAppearanceLarge" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?cardBackgroundColor"
            android:layout_margin="@dimen/spacingLarge">

            <TextView
                android:id="@+id/fmtSupportTvLegalInspector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_legal_inspector"
                android:drawablePadding="@dimen/spacingXXLarge"
                android:drawableStart="@drawable/ic_legal_inspector"
                android:gravity="center_vertical"
                android:padding="@dimen/spacingLarge"
                android:text="@string/label_legal_inspector"
                android:textAppearance="?android:textAppearanceLarge" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="?cardBackgroundColor"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacingLarge">

            <TextView
                android:id="@+id/fmtSupportTvLabourProtectionSpecialist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_labour_protection"
                android:drawablePadding="@dimen/spacingXXLarge"
                android:drawableStart="@drawable/ic_labour_protection"
                android:gravity="center_vertical"
                android:padding="@dimen/spacingLarge"
                android:text="@string/label_labour_protection_specialist"
                android:textAppearance="?android:textAppearanceLarge" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="?cardBackgroundColor"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacingLarge">

            <TextView
                android:id="@+id/fmtSupportTvEconomist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_economist"
                android:drawablePadding="@dimen/spacingXXLarge"
                android:drawableStart="@drawable/ic_economist"
                android:gravity="center_vertical"
                android:padding="@dimen/spacingLarge"
                android:text="@string/label_economist"
                android:textAppearance="?android:textAppearanceLarge" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?cardBackgroundColor"
            android:layout_margin="@dimen/spacingLarge">

            <TextView
                android:id="@+id/fmtSupportTvMethodist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_methodist"
                android:drawablePadding="@dimen/spacingXXLarge"
                android:drawableStart="@drawable/ic_methodist"
                android:gravity="center_vertical"
                android:padding="@dimen/spacingLarge"
                android:text="@string/label_methodist"
                android:textAppearance="?android:textAppearanceLarge" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="?cardBackgroundColor"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacingLarge">

            <TextView
                android:id="@+id/fmtSupportTvPsychologist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_psychologist"
                android:drawablePadding="@dimen/spacingXXLarge"
                android:drawableStart="@drawable/ic_psychologist"
                android:gravity="center_vertical"
                android:padding="@dimen/spacingLarge"
                android:text="@string/label_psychologist"
                android:textAppearance="?android:textAppearanceLarge" />

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_margin="@dimen/spacingMedium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/spacingLarge"
            android:text="@string/label_question_to_experienced"
            android:textAppearance="?android:textAppearanceLarge" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fmtSupportBtnAnswerQuestion"
            style="@style/Button"
            android:layout_width="@dimen/buttonAndTextWidth"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/answer_question"
            android:textAllCaps="false"
            app:backgroundTint="@color/orange" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fmtSupportBtnAdvises"
            style="@style/Button"
            android:layout_width="@dimen/buttonAndTextWidth"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/advises"
            android:textAllCaps="false"
            app:backgroundTint="@color/grey" />

    </LinearLayout>
</ScrollView>