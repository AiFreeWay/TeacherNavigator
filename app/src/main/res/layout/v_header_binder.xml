<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/v_header_binder_iv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_settings" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/v_header_binder_iv_avatar"
        android:layout_width="@dimen/size_avatar_medium"
        android:layout_height="@dimen/size_avatar_medium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_avatar" />

    <TextView
        android:id="@+id/v_header_binder_tv_title"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_header_binder_iv_avatar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/v_header_binder_tv_title"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/v_header_binder_tv_rating"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:drawableLeft="@drawable/ic_rating"
            android:drawablePadding="@dimen/internalPadding"
            android:drawableStart="@drawable/ic_rating"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/v_header_binder_tv_subscribers"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/ic_subscribers"
            android:drawablePadding="@dimen/internalPadding"
            android:drawableStart="@drawable/ic_subscribers"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/colorAccent" />
    </LinearLayout>
</RelativeLayout>