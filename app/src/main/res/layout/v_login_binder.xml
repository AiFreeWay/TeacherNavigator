<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/v_login_binder_iv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/spacingXXLarge"
        android:src="@drawable/ic_settings"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/v_login_binder_iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_avatar"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/v_login_binder_tv_sing_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_login_binder_iv_avatar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="43dp"
        android:layout_marginTop="13dp"
        android:text="@string/enter"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/textColor" />
</RelativeLayout>