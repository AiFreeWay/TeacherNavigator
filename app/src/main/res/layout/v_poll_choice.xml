<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/vPollRoot"
    android:orientation="vertical"
    android:padding="@dimen/spacingSmall">

    <TextView
        android:id="@+id/vPollTvAnswersCount"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_progress_accent"
        android:gravity="end|center_vertical"
        android:paddingLeft="@dimen/spacingMedium"
        android:paddingRight="@dimen/spacingMedium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/vPollGuidelineChoice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="28" />

    <android.support.constraint.Guideline
        android:id="@+id/vPollGuidelineChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <android.support.constraint.Guideline
        android:id="@+id/vPollGuidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <TextView
        android:id="@+id/vPollTvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vPollGuidelineCenter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Правильный ответ" />

</android.support.constraint.ConstraintLayout>