<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacingLarge">

    <TextView
        android:id="@+id/vTagTvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/bg_tag"
        android:paddingBottom="@dimen/spacingMedium"
        android:paddingLeft="@dimen/spacingXLarge"
        android:paddingRight="@dimen/spacingXLarge"
        android:paddingTop="@dimen/spacingMedium"
        android:textStyle="bold"
        tools:text="Такой то тег" />

    <TextView
        android:id="@+id/vTagTvCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:paddingBottom="@dimen/spacingMedium"
        android:paddingLeft="@dimen/spacingXLarge"
        android:paddingRight="@dimen/spacingXLarge"
        android:paddingTop="@dimen/spacingMedium"
        android:textStyle="bold"
        tools:text="218" />

</LinearLayout>