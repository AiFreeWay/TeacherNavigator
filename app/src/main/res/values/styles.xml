<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="cardBackgroundColor">@color/white</item>

        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme.Day">
        <item name="android:windowBackground">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>

        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/grey</item>

        <item name="android:textAppearance">@style/TextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallMedium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeMedium</item>
    </style>


    <style name="AppTheme.Night">
        <item name="android:windowBackground">@color/black</item>
        <item name="cardBackgroundColor">@color/black</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>

        <item name="android:textAppearance">@style/TextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallMedium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeMedium</item>

    </style>

    <style name="AppTheme.Day.Largest">
        <item name="android:textAppearance">@style/TextAppearanceLargest</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallLargest</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeLargest</item>
    </style>

    <style name="AppTheme.Day.Least">
        <item name="android:textAppearance">@style/TextAppearanceLeast</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallLeast</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeLeast</item>
    </style>

    <style name="AppTheme.Day.Lesser">
        <item name="android:textAppearance">@style/TextAppearanceLesser</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallLesser</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeLesser</item>
    </style>

    <style name="AppTheme.Day.Medium">
        <item name="android:textAppearance">@style/TextAppearanceMedium</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallMedium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeMedium</item>
    </style>

    <style name="AppTheme.Day.Larger">
        <item name="android:textAppearance">@style/TextAppearanceLarger</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallLarger</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeLarger</item>
    </style>

    <style name="AppTheme.Night.Largest">
        <item name="android:textAppearance">@style/TextAppearanceLargest</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallLargest</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeLargest</item>
    </style>

    <style name="AppTheme.Night.Least">
        <item name="android:textAppearance">@style/TextAppearanceLeast</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallLeast</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeLeast</item>
    </style>

    <style name="AppTheme.Night.Lesser">
        <item name="android:textAppearance">@style/TextAppearanceLesser</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallLesser</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeLesser</item>
    </style>

    <style name="AppTheme.Night.Medium">
        <item name="android:textAppearance">@style/TextAppearanceMedium</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallMedium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeMedium</item>
    </style>

    <style name="AppTheme.Night.Larger">
        <item name="android:textAppearance">@style/TextAppearanceLarger</item>

        <item name="android:textAppearanceSmall">@style/TextAppearanceSmallLarger</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLargeLarger</item>
    </style>


    <style name="TextAppearanceLeast" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/normalTextSizeLeast</item>
    </style>

    <style name="TextAppearanceLesser" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/normalTextSizeLesser</item>
    </style>

    <style name="TextAppearanceMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/normalTextSizeMedium</item>
    </style>

    <style name="TextAppearanceLarger" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/normalTextSizeLarger</item>
    </style>

    <style name="TextAppearanceLargest" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/normalTextSizeLargest</item>
    </style>

    <style name="TextAppearanceLargeLeast" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/titleTextSizeLeast</item>
    </style>

    <style name="TextAppearanceLargeLesser" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/titleTextSizeLesser</item>
    </style>

    <style name="TextAppearanceLargeMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/titleTextSizeMedium</item>
    </style>

    <style name="TextAppearanceLargeLarger" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/titleTextSizeLarger</item>
    </style>

    <style name="TextAppearanceLargeLargest" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/titleTextSizeLargest</item>
    </style>

    <style name="TextAppearanceSmallLeast" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/smallTextSizeLeast</item>
    </style>

    <style name="TextAppearanceSmallLesser" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/smallTextSizeLesser</item>
    </style>

    <style name="TextAppearanceSmallMedium" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/smallTextSizeMedium</item>
    </style>

    <style name="TextAppearanceSmallLarger" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/smallTextSizeLarger</item>
    </style>

    <style name="TextAppearanceSmallLargest" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/smallTextSizeLargest</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button.Small">
        <item name="android:paddingLeft">@dimen/spacingLarge</item>
        <item name="android:paddingRight">@dimen/spacingLarge</item>
        <item name="android:paddingTop">@dimen/spacingMedium</item>
        <item name="android:paddingBottom">@dimen/spacingMedium</item>
        <item name="android:textSize">@dimen/smallTextSizeMedium</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:minHeight">24dip</item>

        <item name="android:textSize">@dimen/normalTextSizeMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/spacingXLarge</item>
        <item name="android:paddingRight">@dimen/spacingXLarge</item>
        <item name="android:paddingTop">@dimen/spacingXLarge</item>
        <item name="android:paddingBottom">@dimen/spacingXLarge</item>
        <item name="android:background">@drawable/oval_edit_text_backgroud</item>
    </style>

    <style name="EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/oval_edit_text_backgroud</item>
        <item name="android:paddingLeft">@dimen/spacingXXLarge</item>
        <item name="android:paddingRight">@dimen/spacingXXLarge</item>
        <item name="android:paddingBottom">@dimen/spacingLarge</item>
        <item name="android:paddingTop">@dimen/spacingLarge</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="EditText.Multiline" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/oval_text_backgroud</item>
        <item name="android:minLines">5</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="EditTextView">
        <item name="android:background">@drawable/oval_edit_text_backgroud</item>
        <item name="android:paddingLeft">@dimen/spacingXXLarge</item>
        <item name="android:paddingRight">@dimen/spacingXXLarge</item>
        <item name="android:paddingBottom">@dimen/spacingLarge</item>
        <item name="android:paddingTop">@dimen/spacingLarge</item>
        <item name="android:textSize">@dimen/titleTextSizeMedium</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="TransperentToolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
