<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="cardBackgroundColor">@color/white</item>

        <item name="android:windowBackground">@color/black</item>

    </style>

    <style name="AppTheme.Night">
        <item name="android:windowBackground">@color/black</item>
        <item name="cardBackgroundColor">@color/black</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>

        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceSmall</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLarge</item>

    </style>

    <style name="AppTheme.Day">
        <item name="android:windowBackground">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>

        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/grey</item>

        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceSmall</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLarge</item>

    </style>


    <style name="TextAppearanceLarge" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>

    <style name="TextAppearanceSmall" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>



    <style name="Text">
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button.Small">
        <item name="android:paddingLeft">@dimen/spacingLarge</item>
        <item name="android:paddingRight">@dimen/spacingLarge</item>
        <item name="android:paddingTop">@dimen/spacingMedium</item>
        <item name="android:paddingBottom">@dimen/spacingMedium</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:minHeight">24dip</item>

        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/spacingXLarge</item>
        <item name="android:paddingRight">@dimen/spacingXLarge</item>
        <item name="android:paddingTop">@dimen/spacingXLarge</item>
        <item name="android:paddingBottom">@dimen/spacingXLarge</item>
        <item name="android:background">@drawable/oval_edit_text_backgroud</item>
    </style>

    <style name="EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/oval_edit_text_backgroud</item>
        <item name="android:paddingLeft">@dimen/spacingXXLarge</item>
        <item name="android:paddingRight">@dimen/spacingXXLarge</item>
        <item name="android:paddingBottom">@dimen/spacingLarge</item>
        <item name="android:paddingTop">@dimen/spacingLarge</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="EditText.Multiline" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/oval_text_backgroud</item>
        <item name="android:minLines">5</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="EditTextView">
        <item name="android:background">@drawable/oval_edit_text_backgroud</item>
        <item name="android:paddingLeft">@dimen/spacingXXLarge</item>
        <item name="android:paddingRight">@dimen/spacingXXLarge</item>
        <item name="android:paddingBottom">@dimen/spacingLarge</item>
        <item name="android:paddingTop">@dimen/spacingLarge</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="TransperentToolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
