<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Button" parent="EditText">
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/internalPadding</item>
        <item name="android:paddingBottom">@dimen/internalPadding</item>
    </style>

    <style name="EditText" parent="Text">
        <item name="android:background">@drawable/oval_edit_text_backgroud</item>
        <item name="android:paddingLeft">@dimen/externalPadding</item>
        <item name="android:paddingRight">@dimen/externalPadding</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TransperentToolbar"  parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
